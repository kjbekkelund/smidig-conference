<h2 class="page_title">Logg inn</h2>
<%= form_for @user_session, :url => { :action => 'create' } do |f| %>
	<div id="loginform" class="form">
	  <div class="field email">
	    <span><%= f.label :'e-post' %></span>
	    <%= f.text_field :email %>
	  </div>
	  <div class="field password">
	    <span><%= f.label :passord %></span>
	    <%= f.password_field :password %>
	  </div>
	  <div class="field button">
		  <%= f.submit "Logg inn" %>
	  </div>
<div class="forgot_password"><%= link_to "Har du glemt passordet ditt?", new_password_reset_path %></div>
<div class="meld_deg_paa"><%= link_to "Er du ikke påmeldt ennå?", new_user_path %></div>



	 </div>
<% end %>


