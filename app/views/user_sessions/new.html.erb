<% form_for @user_session do |f| %>
	<div id="loginform" class="form">
	  <div>
	    <span><%= f.label :'e-post' %></span>
	    <%= f.text_field :email %>
	  </div>
	  <div>
	    <span><%= f.label :passord %></span>
	    <%= f.password_field :password %>
	  </div>
	  <div class="button">
		  <%= f.submit "Logg inn" %>
	  </div>		  
	 </div>
<% end %>


<p><%= link_to "Har du glemt passordet ditt?", new_password_reset_path %></p>

