<h1>Nytt tema</h1>

<% form_for(@topic) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title, "Tittel" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description, "Beskrivelse" %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Legg til" %>
  </p>
<% end %>

<%= link_to 'Avbryt', topics_path %>
