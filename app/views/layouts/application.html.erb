<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML Basic 1.1//EN"
    "http://www.w3.org/TR/xhtml-basic/xhtml-basic11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="no">

<head>
  <meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
  <title>Smidig 2009: <%= yield :title %></title>
  <%= javascript_include_tag :defaults %>

  <!--[if !IE]><!-->
	<%= stylesheet_link_tag 'screen' %>
  <!-- <![endif]-->

  <!--[if gte IE 7]>
	<%= stylesheet_link_tag 'screen' %>
  <![endif]-->

  <!--[if lte IE 6]>
	<%= stylesheet_link_tag 'ielte6.css' %>
  <![endif]-->

  <!--[if IE 7]>
	<%= stylesheet_link_tag 'ie7.css' %>
  <![endif]-->

  <%= auto_discovery_link_tag :rss, { :controller => 'talks', :format => :rss }, { :title => "Alle lyntaler" } %>
  <%= auto_discovery_link_tag :rss, { :controller => 'talks', :topic_id => @topic, :format => :rss }, { :title => "Lyntaler for #{@topic.title}" } if @topic %>
  <%= auto_discovery_link_tag :rss, { :controller => 'comments', :talk_id => @talk, :format => :rss }, { :title => "Kommentarer for #{@talk.title}" } if @talk %>
</head>
<body
  <%= current_page?(:controller => 'pages', :action => 'index') ? 'id="hjem"' : '' %>
>
<div id="wrapper">
    <%= render :partial => 'layouts/header' %>


    <div class="floating_text_box folder" id="<%= page_id %>">
        <div class='content'>
            <div class='top'></div>
            <div class='background-color'>
                <div class='floating_text_box paper'>
                    <div class='content'>
                        <div class='top'></div>
                        <div class='color'>
                            <div id="main">
                                <div id="notifications">
                                    <p style="color: green"><%= flash[:notice] %></p>
                                    <p style="color: yellow"><%= flash[:warn] %></p>
                                    <p style="color: red"><%= flash[:error] %></p>
                                </div>
                                <%= yield  %>
                            </div>
                        </div>
                    </div>
                    <div class='bottom'>
                        <div></div>
                    </div>
                </div>
            </div>
        </div>
        <div class='bottom'>
            <div></div>
        </div>
    </div>
</div>
<%= render :partial => "layouts/sponsors" %>


<!-- START Disclaimer/Tracking Stuff -->

