	<%= stylesheet_link_tag 'ielte6.css' %>
  <![endif]-->

  <!--[if IE 7]>
	<%= stylesheet_link_tag 'ie7.css' %>
  <![endif]-->

  <%= auto_discovery_link_tag :rss, { :controller => 'talks', :format => :rss }, { :title => "Alle lyntaler" } %>
  <%= auto_discovery_link_tag :rss, { :controller => 'talks', :topic_id => @topic, :format => :rss }, { :title => "Lyntaler for #{@topic.title}" } if @topic %>
  <%= auto_discovery_link_tag :rss, { :controller => 'comments', :talk_id => @talk, :format => :rss }, { :title => "Kommentarer for #{@talk.title}" } if @talk %>
</head>
<body
  <%= current_page?(:controller => 'pages', :action => 'index') ? 'id="hjem"' : '' %>
>

<div id="header">
    <ul class="menu" id="user_nav">
      <% if current_user %>
        <% unfinished do %>
          <li id="logg_ut"><%= link_to "Logg ut", logout_path %></li>
        <% end %>
      <% else %>
        <li id="logg_inn"><%= link_to "Logg inn", login_path %></li>
      <% end %>
    </ul>

    <h1 id="site_title" title="Smidig 2009 hjem"><span><%= link_to_unless_current("Smidig 2009", { :controller => 'pages', :action => 'index' }) %></span></h1>

    <ul class="menu" id="site_nav">
        <%= menu_item "Program", 'program', :controller => 'topics', :action => 'index' %>
        <%= page_menu_item "Lyntaler", 'lyntaler' %>
        <%= page_menu_item "Open Space", 'openspace' %>
        <!--
        <%= page_menu_item "Om konferansen", 'om_konferansen' %>
        <%= page_menu_item "Spre ordet", 'spre_ordet' %>
    	-->
        <%= page_menu_item "Arrangørene", 'arrangoerene' %>
        <li id="forum_menu" class="menu_link forum" title="Forum"><a href="http://forum.smidig.no">Forum</a></li>
        <% if current_user %>
          <%= menu_item "Min påmelding", 'min_paamelding', :controller => 'users', :action => 'current' %>
        <% else %>
          <%= menu_item "Meld meg på!", 'paamelding', :controller => 'users', :action => 'new' %>
        <% end %>
    </ul>
</div>


<div class="floating_text_box folder" id="<%= controller.action_name %>">
	<div class='content'>
	    <div class='top'></div>
	    <div class='background-color'>
			<div class='floating_text_box paper'>
	     		<div class='content'>
				    <div class='top'></div>
				    <div class='color'>
						<div id="main">
							<div id="notifications">
								<p style="color: green"><%= flash[:notice] %></p>
								<p style="color: yellow"><%= flash[:warn] %></p>
								<p style="color: red"><%= flash[:error] %></p>
							</div>
							<%= yield  %>
						</div>
					</div>
				</div>
				<div class='bottom'>
				    <div></div>
				</div>
			</div>
		</div>
	</div>
    <div class='bottom'>
	    <div></div>
    </div>
</div>











